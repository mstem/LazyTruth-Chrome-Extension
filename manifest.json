{
	"name": "LazyTruth",
	"version": "1.1.1",
	"manifest_version": 2,
	"description": "When you get a chain email, we get you the truth.",
	
	"background" : {
		"page": "background.html"
	},


	"content_scripts": [
		{
			"matches": ["*://mail.google.com/*"],
			"js": ["jquery.js", "send.js", "listener2.js", "listener.js"],
			"all_frames": true,
			"run_at": "document_end"
		}
	],

	"permissions": [
		"*://*.google.com/",
		"*://devtools/",
		"tabs",
		"background",
		"notifications",
		"storage"
	]
}
